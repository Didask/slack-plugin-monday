<!-- index.erb -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset='UTF-8' />
    <title>Didask</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
  </head>

  <body class="leading-normal tracking-normal text-gray-700 gradient" style="font-family: 'Source Sans Pro', sans-serif;">
    <div class="container mx-auto">
      <h1 class="my-4 text-5xl font-bold leading-tight text-gray-800">&#9881; Didask Bot for Slack</h1>

      <div class="my-3 flex justify-between">
        <form method="POST" action="/new_feature">
          <input type="text" name="new_feature[name]" class="bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 appearance-none leading-normal">
          <select name="new_feature[type]" class="bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 appearance-none leading-normal">
            <option value="" disabled selected>Select one</option>
            <option value="action">Action</option>
            <option value="command">Command</option>
          </select>
          <input type="submit" value="Add new feature" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        </form>
      </div>

      <div class='' id='didaskbot_actions'>
        <h2 class="text-lg text-gray-800 font-bold">Available Actions</h2>
        <div>
          <% for didaskbot_feature in @didaskbot_features %>
            <% if didaskbot_feature.feature_type == 'action' %>
            <div class='flex justify-between my-3'>
              <div id="" class="flex pr-3">
                <p class="my-auto"><%= didaskbot_feature.feature_name %></p>
              </div>
              <div class='pl-3'>
                <a href='<%= "/feature_#{didaskbot_feature.feature_name}?#feature_name=#{didaskbot_feature.feature_name}" %>' class="hover:underline text-blue-500">Edit</a>
                <!-- <form method='POST' action='/board_updated'>
                  <input type="hidden" name="feature[name]" value="<%#= didaskbot_feature.feature_name %>">
                  <select name="feature[board_id]" class="bg-white focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 appearance-none leading-normal">
                    <option value="" disabled selected>Select a board</option>
                    <%# for board in @boards %>
                    <option value="<%#= board['id'] %>"><%#= board['name'] %></option>
                    <%# end %>
                  </select>
                  <input type="submit" value="Select" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                </form> -->
              </div>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
